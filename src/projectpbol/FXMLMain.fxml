<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="200" prefWidth="320" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projectpbol.FXMLMainController">
   <children>
      <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="320.0">
        <menus>
          <Menu mnemonicParsing="false" text="Simulation">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#start" text="Start" />
                  <MenuItem mnemonicParsing="false" onAction="#load" text="Load" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Input">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#inputPlayer" text="Player" />
              <MenuItem mnemonicParsing="false" onAction="#inputItem" text="Item" />
                  <MenuItem mnemonicParsing="false" onAction="#inputPet" text="Pet" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Display">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#displayPlayer" text="Player" />
                  <MenuItem mnemonicParsing="false" onAction="#displayItem" text="Item" />
                  <MenuItem mnemonicParsing="false" onAction="#displayPet" text="Pet" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Exit">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#exit" text="Exit" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
